def pertence_a_fibonacci(num):
    # Inicializando os dois primeiros números da sequência
    a, b = 0, 1

    # Verifica se o número informado é 0 ou 1, que pertencem à sequência
    if num == 0 or num == 1:
        return True
    
    # Calcula a sequência de Fibonacci até alcançar ou ultrapassar o número informado
    while b < num:
        a, b = b, a + b
    
    # Verifica se o número é igual ao último valor calculado na sequência
    if b == num:
        return True
    else:
        return False

# Definindo um número previamente no código
numero = 21  # Você pode alterar esse valor para testar diferentes números

# Verificação e mensagem
if pertence_a_fibonacci(numero):
    print(f"O número {numero} pertence à sequência de Fibonacci.")
else:
    print(f"O número {numero} NÃO pertence à sequência de Fibonacci.")
